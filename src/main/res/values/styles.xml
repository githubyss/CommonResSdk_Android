<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ********** Application theme. ********** -->

    <!-- Application gray theme. -->
    <style name="comres_app_gray_theme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/comres_toolbarPrimary_gray</item>
        <item name="colorPrimaryDark">@color/comres_toolbarPrimaryDark_gray</item>
        <item name="colorAccent">@color/comres_toolbarAccent_gray</item>
    </style>

    <!-- Application gray translucent theme. -->
    <style name="comres_app_grayTranslucent_theme"
           parent="comres_app_gray_theme">
        <item name="android:windowBackground">@color/comres_layoutBg_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- Application gray translucent fullscreen theme. -->
    <style name="comres_app_grayTranslucentFullscreen_theme"
           parent="comres_app_grayTranslucent_theme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ********** Activity theme. ********** -->

    <!-- Activity no action bar theme. -->
    <style name="comres_activity_noActionBar_theme"
           parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- ********** View theme. ********** -->

    <!-- Click button rectangle blue style. -->
    <style name="comres_clickButton_rectangle_blue_style">
        <item name="android:background">@drawable/comres_clickButton_rectangle_blue</item>
        <item name="android:textColor">@color/comres_clickButtonText_blue</item>
        <item name="android:textSize">@dimen/comres_clickButtonTextSize_default</item>
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Toggle button rectangle blue style. -->
    <style name="comres_toggleButton_rectangle_blue_style">
        <item name="android:background">@drawable/comres_toggleButton_rectangle_blue</item>
        <item name="android:textColor">@color/comres_toggleButtonText_blue</item>
        <item name="android:textSize">@dimen/comres_toggleButtonTextSize_default</item>
        <item name="android:enabled">true</item>
        <item name="android:checkable">true</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Checkbox button rectangle blue style. -->
    <style name="comres_checkboxButton_rectangle_blue_style">
        <item name="android:background">@drawable/comres_checkButton_rectangle_blue</item>
        <item name="android:button">@drawable/comres_checkButton_rectangle_blue</item>
        <item name="android:textColor">@color/comres_checkButtonText_blue</item>
        <item name="android:textSize">@dimen/comres_checkButtonTextSize_default</item>
        <item name="android:enabled">true</item>
        <item name="android:checkable">true</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Label dark slate gray style. -->
    <style name="comres_label_darkSlateGray_style">
        <item name="android:background">@color/comres_color_transparent</item>
        <item name="android:textColor">@color/comres_color_darkslategray</item>
        <item name="android:textSize">@dimen/comres_labelTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Input chocolate style. -->
    <style name="comres_input_chocolate_style">
        <item name="android:background">@color/comres_color_transparent</item>
        <item name="android:textColor">@color/comres_color_chocolate</item>
        <item name="android:textSize">@dimen/comres_labelTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Tips gray style. -->
    <style name="comres_tips_gray_style">
        <item name="android:background">@color/comres_color_transparent</item>
        <item name="android:textColor">@color/comres_color_666666</item>
        <item name="android:textSize">@dimen/comres_tipsTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- ********** Item card theme. ********** -->

    <!-- Item card orange style. -->
    <style name="comres_itemCard_orange_style">
        <item name="android:background">@drawable/comres_itemCard_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Item card label primary orange style. -->
    <style name="comres_itemCardLabelPrimary_orange_style">
        <item name="android:textColor">@color/comres_itemCardLabelPrimary_orange</item>
        <item name="android:textSize">@dimen/comres_itemCardLabelPrimaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Item card label secondary orange style. -->
    <style name="comres_itemCardLabelSecondary_orange_style">
        <item name="android:textColor">@color/comres_itemCardLabelSecondary_orange</item>
        <item name="android:textSize">@dimen/comres_itemCardLabelSecondaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

