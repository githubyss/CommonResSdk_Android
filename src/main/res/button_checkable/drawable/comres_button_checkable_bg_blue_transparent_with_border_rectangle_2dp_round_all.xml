<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/comres_button_checkable_text_normal_blue_transparent"
          android:state_checked="false"
          android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_button_checkable_bg_normal_end_blue_transparent" />
            <gradient android:angle="0"
                      android:centerY="0.5"
                      android:endColor="@color/comres_button_checkable_bg_normal_end_blue_transparent"
                      android:startColor="@color/comres_button_checkable_bg_normal_start_blue_transparent"
                      android:type="linear"
                      android:useLevel="false" />
            <corners android:radius="@dimen/comres_cornerRadius_micro" />
            <stroke android:color="@color/comres_button_checkable_stroke_gray_blue"
                    android:width="@dimen/comres_strokeWidth_none" />
        </shape>
    </item>

    <item android:color="@color/comres_button_checkable_text_checked_blue_transparent"
          android:state_checked="true"
          android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_button_checkable_bg_checked_blue_transparent" />
            <corners android:radius="@dimen/comres_cornerRadius_micro" />
            <stroke android:color="@color/comres_button_checkable_stroke_blue_transparent"
                    android:width="@dimen/comres_strokeWidth_thin" />
        </shape>
    </item>

    <item android:color="@color/comres_button_checkable_text_disabled_blue_transparent"
          android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_button_checkable_bg_disabled_blue_transparent" />
            <corners android:radius="@dimen/comres_cornerRadius_micro" />
            <stroke android:color="@color/comres_button_checkable_stroke_blue_transparent"
                    android:width="@dimen/comres_strokeWidth_none" />
        </shape>
    </item>
</selector>
