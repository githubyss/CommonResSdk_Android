<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card orange style. -->
    <style name="comres_cardBg_orange_style">
        <item name="android:background">@drawable/comres_card_bg_orange_rectangle_14dp_round_all</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Card orange label primary style. -->
    <style name="comres_cardLabelPrimary_orange_style">
        <item name="android:textColor">@color/comres_cardLabelPrimary_orange</item>
        <item name="android:textSize">@dimen/comres_cardLabelPrimaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Card orange label secondary style. -->
    <style name="comres_cardLabelSecondary_orange_style">
        <item name="android:textColor">@color/comres_cardLabelSecondary_orange</item>
        <item name="android:textSize">@dimen/comres_cardLabelSecondaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Card transparent style. -->
    <style name="comres_card_transparent_style">
        <item name="android:background">@drawable/comres_card_bg_transparent_rectangle_14dp_round_all</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Card transparent label primary style. -->
    <style name="comres_cardLabelPrimary_transparent_style">
        <item name="android:textColor">@color/comres_cardLabelPrimary_transparent</item>
        <item name="android:textSize">@dimen/comres_cardLabelPrimaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- Card transparent label secondary style. -->
    <style name="comres_cardLabelSecondary_transparent_style">
        <item name="android:textColor">@color/comres_cardLabelSecondary_transparent</item>
        <item name="android:textSize">@dimen/comres_cardLabelSecondaryTextSize_default</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">left</item>
    </style>
</resources>
