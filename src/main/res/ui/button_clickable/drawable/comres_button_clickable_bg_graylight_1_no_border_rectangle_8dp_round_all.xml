<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/comres_button_clickable_text_normal_graylight_scheme_1"
          android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_button_clickable_bg_normal_graylight_scheme_1" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:color="@color/comres_button_clickable_text_pressed_graylight_scheme_1"
          android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_button_clickable_bg_pressed_graylight_scheme_1" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:color="@color/comres_button_clickable_text_disabled_graylight_scheme_1"
          android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_button_clickable_bg_disabled_graylight_scheme_1" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
