<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonClickBgNormal_blue" />
            <corners android:radius="@dimen/comres_cornerRadius_micro" />
            <stroke android:color="@color/comres_buttonClickStroke_blue"
                    android:width="@dimen/comres_strokeWidth_none" />
        </shape>
    </item>

    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonClickBgPressed_blue" />
            <corners android:radius="@dimen/comres_cornerRadius_micro" />
            <stroke android:color="@color/comres_buttonClickStroke_blue"
                    android:width="@dimen/comres_strokeWidth_none" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonClickBgDisabled_blue" />
            <corners android:radius="@dimen/comres_cornerRadius_micro" />
            <stroke android:color="@color/comres_buttonClickStroke_blue"
                    android:width="@dimen/comres_strokeWidth_none" />
        </shape>
    </item>
</selector>
