<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonClickBgNormal_transparent" />
            <corners android:radius="@dimen/comres_buttonClickCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonClickStrokeWidth_default"
                    android:color="@color/comres_buttonClickStroke_transparent" />
        </shape>
    </item>

    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonClickBgPressed_transparent" />
            <corners android:radius="@dimen/comres_buttonClickCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonClickStrokeWidth_default"
                    android:color="@color/comres_buttonClickStroke_transparent" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonClickBgDisabled_transparent" />
            <corners android:radius="@dimen/comres_buttonClickCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonClickStrokeWidth_default"
                    android:color="@color/comres_buttonClickStroke_transparent" />
        </shape>
    </item>
</selector>
