<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">

            <solid android:color="@color/comres_clickButtonBgNormal_transparent" />
            <corners android:radius="@dimen/comres_clickButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_clickButtonStrokeWidth_default"
                    android:color="@color/comres_clickButtonStroke_transparent" />
        </shape>
    </item>

    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_clickButtonBgPressed_transparent" />
            <corners android:radius="@dimen/comres_clickButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_clickButtonStrokeWidth_default"
                    android:color="@color/comres_clickButtonStroke_transparent" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_clickButtonBgDisabled_transparent" />
            <corners android:radius="@dimen/comres_clickButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_clickButtonStrokeWidth_default"
                    android:color="@color/comres_clickButtonStroke_transparent" />
        </shape>
    </item>
</selector>
