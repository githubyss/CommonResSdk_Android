<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">

            <gradient
                    android:angle="180"
                    android:centerY="0.5"
                    android:endColor="@color/comres_clickButtonBgNormalStart_blue"
                    android:startColor="@color/comres_clickButtonBgNormalEnd_blue"
                    android:type="linear"
                    android:useLevel="false"
                    />
            <corners android:radius="@dimen/comres_clickButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_clickButtonStrokeWidth_default"
                    android:color="@color/comres_clickButtonStroke_blue" />
        </shape>
    </item>

    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_clickButtonBgPressed_blue" />
            <corners android:radius="@dimen/comres_clickButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_clickButtonStrokeWidth_default"
                    android:color="@color/comres_clickButtonStroke_blue" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_clickButtonBgDisabled_blue" />
            <corners android:radius="@dimen/comres_clickButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_clickButtonStrokeWidth_default"
                    android:color="@color/comres_clickButtonStroke_blue" />
        </shape>
    </item>
</selector>
