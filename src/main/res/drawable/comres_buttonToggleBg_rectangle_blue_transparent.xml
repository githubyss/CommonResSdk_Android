<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false"
          android:state_enabled="true"
          android:color="@color/comres_buttonToggleTextUnchecked_blue_transparent">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonToggleBgUncheckedEnd_blue_transparent" />
            <gradient android:angle="0"
                      android:centerY="0.5"
                      android:startColor="@color/comres_buttonToggleBgUncheckedStart_blue_transparent"
                      android:endColor="@color/comres_buttonToggleBgUncheckedEnd_blue_transparent"
                      android:type="linear"
                      android:useLevel="false" />
            <corners android:radius="@dimen/comres_buttonToggleCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonToggleStrokeWidth_default"
                    android:color="@color/comres_buttonToggleStroke_gray_blue" />
        </shape>
    </item>

    <item android:state_checked="true"
          android:state_enabled="true"
          android:color="@color/comres_buttonToggleTextChecked_blue_transparent">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonToggleBgChecked_blue_transparent" />
            <corners android:radius="@dimen/comres_buttonToggleCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonToggleStrokeWidth_default"
                    android:color="@color/comres_buttonToggleStroke_blue_transparent" />
        </shape>
    </item>

    <item android:state_enabled="false"
          android:color="@color/comres_buttonToggleTextDisabled_blue_transparent">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonToggleBgDisabled_blue_transparent" />
            <corners android:radius="@dimen/comres_buttonToggleCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonToggleStrokeWidth_default"
                    android:color="@color/comres_buttonToggleStroke_blue_transparent" />
        </shape>
    </item>
</selector>
