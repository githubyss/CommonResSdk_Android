<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="0"
                      android:centerY="0.5"
                      android:startColor="@color/comres_buttonClickBgNormalStart_blue"
                      android:endColor="@color/comres_buttonClickBgNormalEnd_blue"
                      android:type="linear"
                      android:useLevel="false" />
            <corners android:radius="@dimen/comres_buttonClickCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonClickStrokeWidth_default"
                    android:color="@color/comres_buttonClickStroke_blue" />
        </shape>
    </item>

    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonClickBgPressed_blue" />
            <corners android:radius="@dimen/comres_buttonClickCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonClickStrokeWidth_default"
                    android:color="@color/comres_buttonClickStroke_blue" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_buttonClickBgDisabled_blue" />
            <corners android:radius="@dimen/comres_buttonClickCornerRadius_default" />
            <stroke android:width="@dimen/comres_buttonClickStrokeWidth_default"
                    android:color="@color/comres_buttonClickStroke_blue" />
        </shape>
    </item>
</selector>
