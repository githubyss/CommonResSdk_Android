<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
          android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_checkButtonBgChecked_blue" />
            <corners android:radius="@dimen/comres_checkButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_checkButtonStrokeWidth_default"
                    android:color="@color/comres_checkButtonStroke_blue" />
        </shape>
    </item>

    <item android:state_checked="false"
          android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_checkButtonBgUnchecked_blue" />
            <corners android:radius="@dimen/comres_checkButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_checkButtonStrokeWidth_default"
                    android:color="@color/comres_checkButtonStroke_blue" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_checkButtonBgDisabled_blue" />
            <corners android:radius="@dimen/comres_checkButtonCornerRadius_default" />
            <stroke android:width="@dimen/comres_checkButtonStrokeWidth_default"
                    android:color="@color/comres_checkButtonStroke_blue" />
        </shape>
    </item>
</selector>
