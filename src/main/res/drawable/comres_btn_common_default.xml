<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_common_btn_bg_color_default_normal" />
            <corners android:radius="@dimen/comres_common_btn_corner_radius_default" />
            <stroke android:width="@dimen/comres_common_btn_stroke_width_default"
                    android:color="@color/comres_common_btn_stroke_color_default" />
        </shape>
    </item>

    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_common_btn_bg_color_default_pressed" />
            <corners android:radius="@dimen/comres_common_btn_corner_radius_default" />
            <stroke android:width="@dimen/comres_common_btn_stroke_width_default"
                    android:color="@color/comres_common_btn_stroke_color_default" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comres_common_btn_bg_color_default_disabled" />
            <corners android:radius="@dimen/comres_common_btn_corner_radius_default" />
            <stroke android:width="@dimen/comres_common_btn_stroke_width_default"
                    android:color="@color/comres_common_btn_stroke_color_default" />
        </shape>
    </item>
</selector>
