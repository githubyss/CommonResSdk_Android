<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application gray theme. -->
    <style name="comresTheme_application_gray"
           parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/comres_colorPrimary_gray</item>
        <item name="colorPrimaryDark">@color/comres_colorPrimaryDark_gray</item>
        <item name="colorPrimaryVariant">@color/comres_colorPrimaryVariant_gray</item>
        <item name="colorOnPrimary">@color/comres_colorOnPrimary_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/comres_colorSecondary_gray</item>
        <item name="colorSecondaryVariant">@color/comres_colorSecondaryVariant_gray</item>
        <item name="colorOnSecondary">@color/comres_colorOnSecondary_gray</item>
        <item name="colorAccent">@color/comres_colorAccent_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Application gray translucent theme. -->
    <style name="comresTheme_application_grayTranslucent"
           parent="comresTheme_application_gray">
        <item name="android:windowBackground">@color/comres_layoutBg_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- Application gray translucent fullscreen theme. -->
    <style name="comresTheme_application_grayTranslucentFullscreen"
           parent="comresTheme_application_grayTranslucent">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
