<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application blue theme. -->
    <style name="comresTheme_application_blue"
           parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/comres_colorPrimary_blue</item>
        <item name="colorPrimaryDark">@color/comres_colorPrimaryDark_blue</item>
        <item name="colorPrimaryVariant">@color/comres_colorPrimaryVariant_blue</item>
        <item name="colorOnPrimary">@color/comres_colorOnPrimary_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/comres_colorSecondary_blue</item>
        <item name="colorSecondaryVariant">@color/comres_colorSecondaryVariant_blue</item>
        <item name="colorOnSecondary">@color/comres_colorOnSecondary_blue</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/comres_colorAccent_blue</item>
        <!-- Control color. -->
        <item name="colorControlNormal">@color/comres_colorControlNormal_blue</item>
        <item name="colorControlHighlight">@color/comres_colorControlHighlight_blue</item>
        <item name="colorControlActivated">@color/comres_colorControlActivated_blue</item>
        <!-- Button color. -->
        <item name="colorButtonNormal">@color/comres_colorButtonNormal_blue</item>
        <item name="colorSwitchThumbNormal">@color/comres_colorSwitchThumbNormal_blue</item>
        <!-- Ground color. -->
        <item name="android:colorForeground">@color/comres_colorForeground_blue</item>
        <item name="android:colorBackground">@color/comres_colorBackground_blue</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/comres_textColor_blue</item>
        <item name="android:editTextColor">@color/comres_editTextColor_blue</item>
        <item name="android:textColorPrimary">@color/comres_textColorPrimary_blue</item>
        <item name="android:textColorPrimaryDisableOnly">@color/comres_textColorPrimaryDisableOnly_blue</item>
        <item name="android:textColorSecondary">@color/comres_textColorSecondary_blue</item>
        <item name="android:textColorTertiary">@color/comres_textColorTertiary_blue</item>
        <!-- Window color. -->
        <item name="android:windowBackground">@color/comres_windowBackground_blue</item>
        <!-- Bar color. -->
        <item name="android:statusBarColor">@color/comres_statusBarColor_blue</item>
        <item name="android:navigationBarColor">@color/comres_navigationBarColor_blue</item>
    </style>

    <!-- Application blue translucent theme. -->
    <style name="comresTheme_application_blueTranslucent"
           parent="comresTheme_application_blue">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>
