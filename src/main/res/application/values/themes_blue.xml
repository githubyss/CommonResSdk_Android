<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application blue theme. -->
    <style name="comresTheme_application_blue"
           parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/comres_colorPrimary_blue</item>
        <item name="colorPrimaryDark">@color/comres_colorPrimaryDark_blue</item>
        <item name="colorPrimaryVariant">@color/comres_colorPrimaryVariant_blue</item>
        <item name="colorOnPrimary">@color/comres_colorOnPrimary_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/comres_colorSecondary_blue</item>
        <item name="colorSecondaryVariant">@color/comres_colorSecondaryVariant_blue</item>
        <item name="colorOnSecondary">@color/comres_colorOnSecondary_blue</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/comres_colorAccent_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Application blue translucent theme. -->
    <style name="comresTheme_application_blueTranslucent"
           parent="comresTheme_application_blue">
        <item name="android:windowBackground">@color/comres_layoutBg_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- Application blue translucent fullscreen theme. -->
    <style name="comresTheme_application_blueTranslucentFullscreen"
           parent="comresTheme_application_blueTranslucent">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
