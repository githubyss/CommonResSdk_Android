<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.githubyss.common.res"
    tools:ignore="LockedOrientationActivity"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.application.ComresApplication"
        android:theme="@style/comresTheme_application_default"
        android:allowBackup="false"
        android:icon="@mipmap/comres_ic_launcher_default"
        android:label="${APP_NAME}"
        android:roundIcon="@mipmap/comres_ic_launcher_default_round"
        android:supportsRtl="true"
        tools:replace="android:label,android:allowBackup"
        >

        <activity
            android:name=".app.page.homepage.HomepageActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".app.page.theme.ThemeActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultFullscreenActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultTransparentWindowActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultTransparentWindowFullscreenActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultTransparentWindowStatusActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultTransparentWindowNavigationActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultTransparentWindowStatusNavigationActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultTransparentWindowExtendStatusActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultTransparentWindowExtendNavigationActivity" />
        <activity android:name=".app.page.theme.ThemeDefaultTransparentWindowExtendStatusNavigationActivity" />
    </application>
</manifest>
